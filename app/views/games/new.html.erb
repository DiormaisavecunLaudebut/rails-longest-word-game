<h1>New Game</h1>

<div class="container">
  <ul>
    <% @letters.each do |i| %>
    <li><%= i %></li>
    <% end %>
  </ul>
  <form action="/score" method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
    <input type="text" name="answer">
    <input type="submit" value="Play">
  </form>

</div>
